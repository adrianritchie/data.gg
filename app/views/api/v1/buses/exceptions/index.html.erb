<% content_for :breadcrumb do %>
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "Buses", api_v1_buses_path %></li>
    <li class="active">Exceptions</a>
  </ol>
<% end %>

<h2 class="page-header">Exceptions</h2>

<p>List of exceptions to regular bus stop timing rules</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stop_link_exceptions.each do |stop_link_exception| %>
      <tr>
        <td style="width:40px" title="#<%= stop_link_exception.colour %>">
          <div style="width:20px;height:20px;border:1px solid #000;background-color:#<%= stop_link_exception.colour %>"></div>
        </td>
        <td><%= link_to stop_link_exception.name, api_v1_buses_exception_path(stop_link_exception) %></td>
        <td align="right">
          <%= link_to 'Edit', edit_api_v1_buses_exception_path(stop_link_exception) %> | 
          <%= link_to 'Destroy', api_v1_buses_exception_path(stop_link_exception), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Stop link exception', new_api_v1_buses_exception_path %>
