<% content_for :breadcrumb do %>
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "Charts", charts_path %></li>
    <li class="active">Housing</li>
  </ol>
<% end %>



<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Housing</h1>
    </div>

    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%= link_to 'Mean Average', charts_housing_mean_average_path %></li>
      <li role="presentation"><%= link_to 'No. Of Transactions', charts_housing_transactions_path %></li>
    </ul>
  </div>
</div>

<div class="row">
    <canvas class="col-md-12" id="mean_average"></canvas>
    <%= javascript_tag do %>
      var ctx = document.getElementById("mean_average").getContext("2d");

      var data = {
        labels : <%= @labels.to_json.html_safe %>,
        datasets : <%= @data.to_json.html_safe -%>
      };

      var myNewChart = new Chart(ctx).Line(data, {
        animation: false,
        pointHitDetectionRadius: 2,
        showScaleLabels:false,
        scaleFontSize:10
      });
    <% end %>

</div>