<% content_for :breadcrumb do %>
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "Charts", charts_path %></li>
    <li><%= link_to 'Buses', charts_buses_path %></li>
    <li class="active">Usage</li>
  </ol>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Buses</h1>
    </div>

    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%= link_to 'Usage', charts_buses_usage_path %></li>
    </ul>
  </div>
</div>


<div id="container" style="min-width: 310px; height: 500px; margin: 0 auto"></div>
<%= javascript_tag do %>

$(function() {
  initPage();
});
$(window).bind('page:change', function() {
  initPage();
});

function initPage() {
    var yLabels = <%= @labels.to_json.html_safe %>;

    $('#container').highcharts({
        chart: {
            type: 'area'
        },
        title: {
            text: 'Usage per month'
        },
        xAxis: {
            allowDecimals: false,
            categories: yLabels,
            title: {
                text: 'Month'
            }
        },
        yAxis: {
            allowDecimals: false,
            title: {
                text: 'Users'
            },
            labels: {
                formatter: function () {
                    return this.value / 1000 + 'k';
                }
            }
        },
        plotOptions: {
            area: {
                marker: {
                    enabled: false,
                    symbol: 'circle',
                    radius: 2,
                    states: {
                        hover: {
                            enabled: true
                        }
                    }
                }
            }
        },
        series: [{
            name: 'Local',
            showInLegend: false,
            data: <%= @users.to_json.html_safe -%>
        }]
    });
}
<% end %>